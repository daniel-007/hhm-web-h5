<div class="page-group">
    <div id="page-address-select" class="page page-current">
        <nav class="bar bar-tab my-booking-fix-bar">
            <a :href="'/address/add?type=1&product='+productIdStr" class="my-28-text external">新增地址</a>
        </nav>
        <div class="content native-scroll">
            <template v-for="receiver in receivers">
                <div class="list-block media-list my-select-address">
                    <ul v-cloak>
                        <li>
                            <a :href="'/book/confirm?id='+receiver.receiverId+'&product='+productIdStr" class="item-content external">
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">
                                            <label class="label-checkbox" v-show="receiver.isSelected">
                                                <input type="radio" :checked="receiver.isSelected" name="single-radio">
                                                <div class="item-media"><i class="icon icon-form-checkbox"></i></div>
                                            </label>${receiver.receiver}</div>
                                        <div class="item-after">${receiver.phone}</div>
                                    </div>
                                    <div class="item-text my-gray-text">${receiver.pcdDes} ${receiver.address}
                                    </div>
                                </div>
                            </a>
                            <div class="row">
                                <div class="col-50 my-gray-text my-22-text" v-if="receiver.isDefault">已设为默认地址</div>
                                <div class="col-50 my-gray-text my-22-text" v-if="!receiver.isDefault">&nbsp;</div>
                                <div class="col-50 my-right-text"><a :href="'/address/modify?type=1&id='+receiver.receiverId+'&product='+productIdStr" class="my-gray-text my-22-text external"><span class="icon icon-edit"></span> 修改</a></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </template>
        </div>
    </div>
</div>
<script type='text/javascript' src='//g.alicdn.com/sj/lib/zepto/zepto.min.js' charset='utf-8'></script>
<script type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm.min.js' charset='utf-8'></script>
<script type='text/javascript' src='../js/lib/requirejs.min.js' data-main='../js/controller/address-ctrl.min'></script>
