<div class="page-group">
    <div id="page-book-confirm" class="page page-current">
        <nav class="bar bar-tab my-booking-bar">
            <div class="row">
                <div class="col-60 my-28-text">
                    实付金额 :<span class="my-red-text"v-cloak> ￥${countPrice}</span>
                </div>
                <div class="col-40"><a id="submitBook" href="#" class="my-28-text external">提交订单</a></div>
            </div>
        </nav>

        <div class="content native-scroll">
            <div class="list-block media-list my-booking-address">
                <ul>
                    <li v-cloak>
                        <a :href="'/address?id='+receiver.receiverId+'&product='+productIdStr" class="item-link item-content external">
                            <div class="item-inner">
                                <div class="item-title-row">
                                    <div class="item-title">${receiver.receiver}</div>
                                    <div class="item-after">${receiver.phone}</div>
                                </div>
                                <div class="item-text my-gray-text">${receiver.pcdDes} ${receiver.address}
                                </div>
                            </div>
                            <span class="icon icon-address"></span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="content-block-title my-list-title my-t20-mar">支付方式</div>
            <div class="list-block my-div-pay-way">
                <ul>
                    <label class="label-checkbox">
                        <li class="item-content">
                            <div class="item-inner">
                                <div class="item-title"><span class="icon icon-card"></span>在线支付</div>
                                <div class="item-after">
                                    <input type="radio" checked name="single-radio" v-model="payment" :value="0">
                                    <div class="item-media"><i class="icon icon-form-checkbox"></i></div>
                                </div>
                            </div>
                        </li>
                    </label>
                    <label class="label-checkbox">
                        <li class="item-content">
                            <div class="item-inner">
                                <div class="item-title"><span class="icon icon-cashondeliver"></span>货到付款</div>
                                <div class="item-after">
                                    <input type="radio" name="single-radio" v-model="payment" :value="4">
                                    <div class="item-media"><i class="icon icon-form-checkbox"></i></div>
                                </div>
                            </div>
                        </li>
                    </label>
                </ul>
            </div>

            <div class="content-block-title my-list-title my-t20-mar">订单详情:
                <a href="/cart/cart-no-footer" class="button external">返回购物车</a>
            </div>
            <div class="list-block media-list my-booking-list">
                <ul v-cloak>
                    <template v-for="cart in cartsAry" track-by="productId">
                        <li>
                            <div class="item-content">
                                <div class="item-media"><img :src="cart.image" style='width: 3.4rem;'></div>
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title  my-24-text">${cart.name}
                                        </div>
                                    </div>
                                    <template v-for="sku in cart.skus" track-by="cartId">
                                        <div class="item-subtitle my-gray-text  my-24-text">${sku.size}</div>
                                        <div class="row">
                                            <div class="col-50 my-red-text my-24-text">￥${sku.price}</div>
                                            <div class="col-50 my-right-text my-24-text">x${sku.qty}</div>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </li>
                    </template>
                </ul>
            </div>

            <div class="row my-div-booking-total">
                <div class="col-50">商品金额
                    <br>优惠</div>
                <div class="col-50 my-red-text my-right-text">¥ ${countPrice}
                    <br>¥ -17.00</div>
            </div>
        </div>
    </div>
</div>

<script type='text/javascript' src='//g.alicdn.com/sj/lib/zepto/zepto.min.js' charset='utf-8'></script>
<script type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm.min.js' charset='utf-8'></script>
<script type='text/javascript' src='../js/lib/requirejs.min.js' data-main='../js/controller/book-ctrl.min'></script>
