<div class="page-group">
    <div id="page-my-address" class="page page-current">
        <nav class="bar bar-tab my-booking-fix-bar">
            <a href="#" @click.prevent="addOrEditAdr(-1, $event)" class="my-28-text external">新增地址</a>
        </nav>
        <div class="content native-scroll">
            <template v-for="receiver in receivers">
                <div class="list-block media-list my-select-address my-address">
                    <ul>
                        <li>
                            <a href="#" class="item-content">
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">${receiver.receiver}</div>
                                        <div class="item-after">${receiver.phone}</div>
                                    </div>
                                    <div class="item-text my-gray-text">${receiver.pcdDes} ${receiver.address}
                                    </div>
                                </div>
                            </a>
                            <div class="row">
                                <div class="col-50 my-gray-text my-22-text">
                                    <label class="label-checkbox"><input type="radio" @change="setDefault" :checked="receiver.isDefault" :value="$index" v-model="defaultIdx" name="single-radio"><div class="item-media"><i class="icon icon-form-checkbox"></i></div>${receiver.isDefault ? '默认地址':'设为默认'}</label>
                                </div>
                                <div class="col-50 my-right-text"><a href="#" @click.prevent="addOrEditAdr($index, $event)" class="my-gray-text my-22-text external"><span class="icon icon-edit"></span> 修改</a> <a href="#" @click.prevent="deleteAdr($index, $event)" class="my-gray-text my-22-text"><span class="icon icon-delete"></span> 删除</a></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </template>
        </div>
    </div>
</div>
<div id="popup-adr" class="popup popup-adr">
    <div class="content-padded">
        <p class="my-gray-text"></p>
        <div class="list-block my-0-mar my-no-icon">
            <ul class="my-ul-border my-0-mar">
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-input">
                                <input type="text" placeholder="请输入收货人姓名" v-model="receiver">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-input">
                                <input type="text" placeholder="请输入收货人电话" v-model="phone">
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <p class="my-gray-text">所在地区</p>
        <div class="list-block my-0-mar my-no-icon">
            <ul class="my-ul-border my-0-mar">
                <li>
                    <div class="item-content">
                        <div class="item-inner my-bg-select">
                            <div class="item-input">
                                <input type="text" id="city-picker" v-model="pcdDes" />
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <p class="my-gray-text"></p>
        <div class="list-block my-0-mar my-no-icon">
            <ul class="my-ul-border my-0-mar">
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-input">
                                <textarea rows="3" placeholder="请输入路名、门牌号等" v-model="address"></textarea>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <p class="my-50-mar"><a href="#" class="close-popup button button-fill button-big external">完成</a></p>
    </div>
</div>
<script type='text/javascript' src='//g.alicdn.com/sj/lib/zepto/zepto.min.js' charset='utf-8'></script>
<script type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm.min.js' charset='utf-8'></script>
<script type="text/javascript" src="../js/lib/sm-city-picker.js" charset="utf-8"></script>
<script type='text/javascript' src='../js/lib/requirejs.min.js' data-main='../js/controller/my.min'></script>
