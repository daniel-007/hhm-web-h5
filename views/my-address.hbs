<div class="page-group">
    <div id="page-my-address" class="page page-current">
        <nav class="bar bar-tab my-booking-fix-bar">
            <a href="/address/add" class="my-28-text external">新增地址</a>
        </nav>
        <div class="content native-scroll">
            <template v-for="receiver in receivers">
                <div class="list-block media-list my-select-address my-address">
                    <ul>
                        <li>
                            <a href="#" class="item-content">
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">${receiver.ReceiverName}</div>
                                        <div class="item-after">${receiver.ReceiverPhone}</div>
                                    </div>
                                    <div class="item-text my-gray-text">${receiver.Province} ${receiver.City} ${receiver.District} ${receiver.Address}
                                    </div>
                                </div>
                            </a>
                            <div class="row">
                                <div class="col-50 my-gray-text my-22-text">
                                    <label class="label-checkbox"><input type="radio" :checked="receiver.IsDefault" :value="$index" v-model="defaultIdx" name="single-radio"><div class="item-media"><i class="icon icon-form-checkbox"></i></div>${receiver.IsDefault ? '默认地址':'设为默认'}</label>
                                </div>
                                <div class="col-50 my-right-text"><a href="/address/modify" class="my-gray-text my-22-text external"><span class="icon icon-edit"></span> 修改</a> <a href="#" id="delete" class="my-gray-text my-22-text"><span class="icon icon-delete"></span> 删除</a></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </template>
        </div>
    </div>
</div>
<script type='text/javascript' src='//g.alicdn.com/sj/lib/zepto/zepto.min.js' charset='utf-8'></script>
